  <!-- Start: Right Sidebar -->
<aside id="sidebar_right" class="nano"  >
    <div class="sidebar_right_content nano-content" id="ctrlchat" data-ng-controller="ctrl.chat">


        <div data-ng-class="contact ? 'hide-inbox':'show-inbox'" id="inbox">
            <table width="100%" class="ctbl fadeInRightBig" style="border:none;" data-ng-show="contact">

                <tr data-ng-repeat="ch in onlineList" data-ng-click="onShowInbox(ch.userId,ch.userName)">
                    <td style="width: 32px; height: 32px;">
                        <img ng-src=imageExists(ch.userId) width="32" height="32" />
                    </td>
                    <td class="c-online-p">{{ch.userName}} <span class="label label-danger label-sm lh20 h-20 mt5 mr5" data-ng-hide="ch.msgCount <= 0">{{ch.msgCount}}</span><span class="pull-right"><i class="fa fa-circle text-tp fs8 rate-hit "></i></span></td>
                </tr>


            </table>

            <div class="inbox-open fadeInRightBig" data-ng-show="inbox">

                <div data-ng-repeat="msg in getchatMsg" ng-class="msg.iconClass">
                    <span ng-bind-html="trustAsHtml(msg.strMsg)"></span><br />
                    <small>{{msg.createDte | date :"MMM d, y h:mm:ss a" }}</small>
                    <div class="post"></div>
                </div>

            </div>
            <div class="post"></div>
            <table class="ctbl bg-primary" style="border:none; position:fixed; top:60px; width:100%;" data-ng-show="inbox" data-ng-click="inbox=false;contact=true;setcontactId='';setcontactName='';">
                <tr><td colspan="2"><span class="glyphicon glyphicon-arrow-left "></span>&nbsp;Back</td></tr>

            </table>
        </div>
        <div class="compose-msg" style="right:0;bottom:0;" data-ng-show="inbox">
            <textarea id="chatmsg" class="control" style="width:100%;" data-ng-model="chatmsg" ng-enter="onSubmitChat()"></textarea>
            <small>Please hit the enter to submit.&nbsp; <span class="glyphicon glyphicon-paperclip pointer" data-ng-click="onAttachment()"></span></small>
        </div>
    </div>
</aside>
<!-- End: Right Sidebar -->
